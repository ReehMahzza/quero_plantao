    <script>
        lucide.createIcons();
        document.addEventListener('DOMContentLoaded', () => {
            const sidePanel = document.getElementById('side-panel');
            const patientModal = document.getElementById('patient-modal');
            const openShiftButtons = document.querySelectorAll('.open-shift');
            const patientLinks = document.querySelectorAll('.patient-link');
            const closePanelBtn = document.getElementById('close-panel');
            const closeModalBtn = document.getElementById('close-modal');

            const openPanel = () => sidePanel.classList.remove('translate-x-full');
            const closePanel = () => sidePanel.classList.add('translate-x-full');
            const openModal = () => patientModal.classList.remove('opacity-0', 'pointer-events-none');
            const closeModal = () => patientModal.classList.add('opacity-0', 'pointer-events-none');

            openShiftButtons.forEach(btn => btn.addEventListener('click', openPanel));
            patientLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    openModal();
                });
            });
            closePanelBtn.addEventListener('click', closePanel);
            closeModalBtn.addEventListener('click', closeModal);
            patientModal.addEventListener('click', (e) => {
                if (e.target === patientModal) closeModal();
            });
        });
    </script>
